build-type:          Simple
extra-source-files:  ChangeLog.md
cabal-version:       >=1.10

library
  hs-source-dirs: lib
  build-depends:  base,
                  --
                  aeson,
                  attoparsec,
                  base16-bytestring,
                  bytestring,
                  containers,
                  directory,
                  directory-tree,
                  discrimination,
                  either,
                  filepath,
                  haskeline,
                  jvm,
                  lens,
                  optparse-applicative,
                  postgresql-simple,
                  protocol-buffers,
                  text,
                  textview,
                  time,
                  transformers,
                  HCoreNLP,
                  intrinio,
                  yaml,
                  nlp-types,
                  yayaml
  exposed-modules: Pipeline.Util
                   Pipeline.Application.Run
                   Pipeline.Type
                   Pipeline.Source.NewsAPI.Article
                   Annot.NER
                   Annot.SUTime
  other-extensions: TemplateHaskell
  ghc-prof-options: -fprof-auto
  ghc-options: -threaded -Wall -fno-warn-unused-do-bind -fwarn-tabs -funbox-strict-fields -fno-warn-orphans -O2

executable nlp-pipeline
  hs-source-dirs:      app
  main-is:             main.hs
  -- other-modules:       
  build-depends:       base,
                       --
                       text,
                       --
                       nlp-pipeline
  ghc-options: -threaded -Wall -fno-warn-unused-do-bind -fwarn-tabs -funbox-strict-fields -O2
  default-language:    Haskell2010